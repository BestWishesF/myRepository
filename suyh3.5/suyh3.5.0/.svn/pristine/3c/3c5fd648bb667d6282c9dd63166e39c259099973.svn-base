body{
	background:#ebebeb;
}
.site{
	width:100%;
	min-height:7.5rem;
}
.site .rule{
	width:100%;
	height:0.75rem;
	font-size:0.26rem;
	line-height: 0.75rem;
}
.site .rule i{
	float:right;
	padding:0 0.4rem;
	background-size:0.28rem;
}
.site .conten{
	width:100%;
	min-height:2.5rem;
}
.site .box{
	width:6.68rem;
	height:2.4rem;
	border-radius:0.07rem;
	border-bottom:0.08rem solid #e57e17;
	background:url(../img/back.png) no-repeat 5.3rem 1.5rem;
	background-size:1.09rem 1rem;
	background-color:#fff;
	margin-bottom:0.4rem;
}
.site .box .top{
	font-size:0.2rem;
	height:1.98rem;
}
.site .box .left{
	float:left;
	font-size:0.3rem;
	padding:0.26rem 0 0 0.37rem;
	color:#fa8919;
}
.site .box .right{
	float:right;
	padding:0.1rem 0.5rem;
	color:#fa8919;
	font-size:0.22rem;
}
.stan{
	width:2rem;
	height:2rem;
	margin-left:2.7rem;
	backgorund:#fff;
}
.site .box .right i{
	font-size:0.6rem;
	padding-left:0.5rem;
}
.site .box .time{
	font-size:0.2rem;
	float:left;
	padding:0.11rem 0.38rem;
	color:#fa8919;
}
.site .bottom{
	width:100%;
	height:0.35rem;
	font-size:0.2rem;
	padding-left:0.4rem;
	color:#999;
}
.site .cashing{
	font-size:0.26rem;
	width:5rem;
	height:0.27rem;
	padding-left:0.8rem;
}
#btn{
	margin-left:1.5rem;
	font-size:0.33rem;
}
footer{
	width:100%;
	height:7.47rem;
}
footer #butn{
	border:0;
	width:6.9rem;
	height:0.84rem;
	background:#ff9a0a;
	color:#fff;
	font-size:0.34rem;
	border-radius: 0.04rem;
	margin:1.64rem 0.31rem 0;
}


