<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>cn.hotol</groupId>
	<artifactId>app-webapp</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>rar</packaging>
	
	<properties>
		<app.name>app</app.name>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	
	<build>
		<plugins>
			<plugin>
                <groupId>net.alchim31.maven</groupId>
                <artifactId>yuicompressor-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>compress</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <nosuffix>true</nosuffix>
                    <sourceDirectory>${basedir}/src/main/webapp/js</sourceDirectory>
                    <includes>
                        <include>**/*Model.js</include>
                        <include>**/*View.js</include>
                    </includes>

                    <aggregations>
                        <aggregation>
                            <insertNewLine>true</insertNewLine>
                            <output>${basedir}/src/main/webapp/js/models/allModels.js</output>
                            <includes>
                                <include>**/*Model.js</include>
                            </includes>
                            <excludes>
                                <exclude>**/w13Model.js</exclude>
                                <exclude>**/locationModel.js</exclude>
                                <exclude>**/headerModel.js</exclude>
                                <exclude>**/loginModel.js</exclude>
                            </excludes>
                        </aggregation>
                        <aggregation>
                            <insertNewLine>true</insertNewLine>
                            <output>${basedir}/src/main/webapp/js/views/allViews.js</output>
                            <includes>
                                <include>**/*View.js</include>
                            </includes>
                            <excludes>
                                <exclude>**/w13View.js</exclude>
                                <exclude>**/locationView.js</exclude>
                                <exclude>**/headerView.js</exclude>
                                <exclude>**/loginView.js</exclude>
                            </excludes>
                        </aggregation>
                    </aggregations>
                </configuration>
            </plugin>
            
            <plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.4.3</version>
				<executions>
					<execution>
						<id>copy-modules</id>
						<!-- here the phase you need -->
						<phase>compile</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/${app.name}</outputDirectory>
							<resources>
								<resource>
									<directory>${basedir}/src/main/webapp/assets</directory>
									<targetPath>assets</targetPath>
								</resource>
								<resource>
									<directory>${basedir}/src/main/webapp/css</directory>
									<targetPath>css</targetPath>
								</resource>
								<resource>
									<directory>${basedir}/src/main/webapp/fonts</directory>
									<targetPath>fonts</targetPath>
								</resource>
								<resource>
									<directory>${basedir}/src/main/webapp/html</directory>
									<targetPath>html</targetPath>
								</resource>
								<resource>
									<directory>${basedir}/src/main/webapp/images</directory>
									<targetPath>images</targetPath>
								</resource>
								<resource>
									<directory>${basedir}/src/main/webapp/js</directory>
									<targetPath>js</targetPath>
								</resource>
								<resource>
									<directory>${basedir}/src/main/webapp/steal</directory>
									<targetPath>steal</targetPath>
								</resource>
								<resource>
									<directory>${basedir}/src/main/webapp/tpl</directory>
									<targetPath>tpl</targetPath>
								</resource>
								<resource>
									<directory>${basedir}/src/main/webapp/uploadify-v3.1</directory>
									<targetPath>uploadify-v3.1</targetPath>
								</resource>
								<resource>
									<directory>${basedir}/src/main/webapp/tiny_mce</directory>
									<targetPath>tiny_mce</targetPath>
								</resource>
								<resource>
									<directory>${basedir}/src/main/webapp/testData</directory>
									<targetPath>testData</targetPath>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
        </plugins>
    </build>
    
    <repositories>
        <repository>
            <id>w13-public</id>
            <name>W13Public</name>
            <url>http://183.247.183.179:8099/nexus/content/groups/public</url>
        </repository>
        <repository>
            <id>w13-releases</id>
            <name>W13Releases</name>
            <url>http://183.247.183.179:8099/nexus/content/repositories/releases/</url>
        </repository>
        <repository>
            <id>w13-snapshots</id>
            <name>W13Snapshots</name>
            <url>http://183.247.183.179:8099/nexus/content/repositories/snapshots/</url>
        </repository>
    </repositories>

	<distributionManagement>
		<repository>
			<id>w13-releases</id>
            <name>W13Releases</name>
			<url>http://183.247.183.179:8099/nexus/content/repositories/releases/</url>
		</repository>
		<snapshotRepository>
			<id>w13-snapshots</id>
            <name>W13Snapshots</name>
			<url>http://183.247.183.179:8099/nexus/content/repositories/snapshots/</url>
		</snapshotRepository>
	</distributionManagement> 
</project>