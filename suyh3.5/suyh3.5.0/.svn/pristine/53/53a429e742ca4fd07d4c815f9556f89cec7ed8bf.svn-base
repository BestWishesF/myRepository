<!------------------------------------banner------------------------------------------->
<section class="banner">
	<div class="phone">
		<span class="Phone">手机号：</span><input class="input" type="text" id="phone" value="" placeholder="请输入11位手机号" />
	</div>
	<button class="btn"><img src="../img/btn.png" alt="" ></button>
	<div class="coupon">
		<div class="box">
			<div class="top">
				<span class="left">速邮汇.快递优惠券</span>
				<span class="right">￥<i>6</i></span>
				<span class="time">有效期至<em>2017-03-20</em></span>

				</div>
			<p class="bottom">限下城区寄件使用</p>
		</div>
		<div class="box  second">
			<div class="top">
				<span class="left">速邮汇.快递优惠券</span>
				<span class="right">￥<i>3</i></span>
				<span class="time">有效期至<em>2017-03-20</em></span>
			</div>
			<p class="bottom">限下城区寄件使用</p>
		</div>
	</div>
</section>
<section class="explain">
	<img src="../img/explain.png" alt="" >
</section>
<section class="download">
	<img src="../img/download.png" alt="" >
